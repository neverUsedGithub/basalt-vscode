{
  "name": "basalt-vscode",
  "main": "dist/extension.js",
  "private": true,
  "version": "0.0.1",
  "publisher": "neverUsedGithub",
  "type": "commonjs",
  "scripts": {
    "build": "npm run build-ext && npm run build-editor",
    "build-ext": "esbuild --outfile=dist/extension.js --external:vscode --format=cjs --target=node22 --platform=node --bundle src/extension.ts",
    "build-editor": "esbuild src/item-editor/index.tsx --outdir=dist/item-editor --target=esnext --platform=browser --bundle --loader:.ttf=file"
  },
  "engines": {
    "vscode": ">=1.103.0"
  },
  "activationEvents": [],
  "contributes": {
    "languages": [
      {
        "id": "basalt",
        "configuration": "./language-configuration.json",
        "aliases": [
          "Basalt"
        ],
        "extensions": [
          ".basalt"
        ]
      }
    ],
    "grammars": [
      {
        "language": "basalt",
        "scopeName": "source.basalt",
        "path": "./syntaxes/basalt.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "basalt.lsp.reload",
        "title": "Basalt: Restart LSP"
      },
      {
        "command": "basalt.runfile",
        "title": "Basalt: Run File",
        "icon": "$(play)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "basalt.runfile",
          "when": "resourceLangId == basalt",
          "group": "navigation"
        }
      ]
    },
    "customEditors": [
      {
        "viewType": "nbt-mcitem-editor",
        "displayName": "Item Editor",
        "selector": [
          {
            "filenamePattern": "*.mcitem"
          }
        ]
      }
    ]
  },
  "devDependencies": {
    "@types/node": "^24.3.3",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@types/vscode": "^1.103.0",
    "prettier": "^3.6.2"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@octokit/rest": "^22.0.1",
    "@vscode-elements/react-elements": "^2.3.1",
    "@vscode/codicons": "^0.0.40",
    "esbuild": "^0.25.10",
    "node-stream-zip": "^1.15.0",
    "pixi.js": "^8.13.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-resizable-panels": "^3.0.6",
    "vscode-languageclient": "^9.0.1",
    "zod": "^4.1.8"
  }
}
